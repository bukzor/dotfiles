#!/bin/sh

exec find \
    \( \
        -name build -or -name locale -or -name "www-pkg-*" -or \
        -name 'sandbox-*' -or -name '.git' -or -name 'logs' \
    \) -prune -or \
    -type f \
    -not -name "*.py[co]" -not -name "*.sw[nop]" -not -name '*.dblite' \
	-not \( \( -path './*templates/*' -or -path '*/css/*' \) -name '*.py' \) \
    "$@"



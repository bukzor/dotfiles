#!/bin/bash
## usage:  echo buildbot28 bb{90..96}-useast1atestopia | time ssh-each hostname -f
CMD=$(echo $@ | sed "s/'/'\"'\"'/g")

exec xargs -n1 | xargs --replace -P10 sh -c "
    echo -n '{}: ' > /tmp/$USER.{}.w.txt;
    ssh -TA -o BatchMode=yes -o StrictHostKeyChecking=no {} '$CMD' >> /tmp/$USER.{}.w.txt 2>&1;
    cat /tmp/$USER.{}.w.txt
    rm -f /tmp/$USER.{}.w.txt
"

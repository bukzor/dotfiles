#!/usr/bin/env python3
TEST_TEXT = 'il1'
COLOR0 = (30, 90, 40, 100)

def colortest(test_text=TEST_TEXT):
    for color0 in COLOR0:
        for bold in '', '1;':
            for base_color in range(color0, color0 + 8):
                base_color = str(base_color)
                color = bold + base_color
                text = f'{color} {test_text}'
                print(f'\033[{color}m{color:>6} {test_text} ', end='')
            print('\033[m')

def main():
    from sys import argv
    return colortest(*argv[1:])

if __name__ == '__main__':
    raise SystemExit(main())

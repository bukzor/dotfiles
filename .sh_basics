export USER HOME PATH SHELL
USER="$(id -un)"
HOME="$(echo ~)"
if ! [[ "$PATH" ]]; then
  PATH=/bin:/usr/bin:/sbin:/usr/sbin
fi
PATH=~/.local/bin:~/private-dotfiles/bin:~/bin:"$PATH"
if ! [[ "$TERM" ]]; then
  TERM=xterm-256color
fi
if ! [[ "$SHELL" ]]; then
  export SHELL
  SHELL="$(readlink /proc/$$/exe)"
fi

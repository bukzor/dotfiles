[user]
    name = Buck Golemon
    email = buck@yelp.com
[color]
    ui = auto
[diff]
    external = $HOME/bin/git_diff_wrapper
[pager]
    diff = 
    blame = 
[pack]
    threads = 0
    packSizeLimit = 64m
[diff]
    renamelimit = 0
[alias]
    branchname = !sh -c 'git symbolic-ref HEAD|sed s@^refs/heads/@@'
    upstream = !sh -c '\
        git config branch.`git branchname`.upstream || \
        branch=`git branchname` && \
        remote=`git config \"branch.$branch.remote\"` && \
        merge=`git config \"branch.$branch.merge\"|sed s@^refs/heads/@@`&& \
        echo $remote/$merge\
    '
    base = !git merge-base `git upstream` HEAD
    diffbase = !sh -c 'git diff `git base` "$@"' -
    lol = log --oneline --graph --decorate 
    fetch1 = !sh -c 'colorize git fetch "$0" "$1":refs/remotes/"$0"/"$1"'

    branch1 = !sh -c 'git fetch1 canon master && git checkout canon/master -b "$0" && mm && USER="${1-buck}" alert-irc new branch "$0"'


